---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.jsx";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import AnimatedBox from "../../components/AnimatedBox";
import FadeInBox from "../../components/FadeInBox";
import { FaFacebook, FaX, FaLinkedin, FaInstagram } from "react-icons/fa6";
import CountUpNum from "../../components/CountUp";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header client:load />
    <main class="flex flex-col md:px-10 px-4 text-white">
      <section class="pt-20 bg-gradients">
        <AnimatedBox client:load>
          <div class="text-center lg:w-3/5 w-[90%] mx-auto">
            <h1 class="md:text-5xl text-[37px] font-black uppercase">
              Your Success, <span class="bg-white text-black rounded-xl px-2"
                >Our Mission</span
              >
            </h1>
            <p
              class="text-[#b3b3b3] text-[19px] my-4 leading-tight md:my-5 px-4"
            >
              We empower businesses with innovative marketing strategies that
              drive growth and foster lasting relationships.
            </p>
          </div>
        </AnimatedBox>
        <FadeInBox client:load>
          <div class="text-center mt-10">
            <a
              class="bg-white text-black rounded-2xl w-32 md:w-auto px-4 py-2"
              href="">Get in touch</a
            >
            <a
              class="md:ml-8 ml-5 border w-40 md:w-auto mt-5 md:mt-0 rounded-2xl px-4 py-2"
              href="">Get Started</a
            >
          </div>
        </FadeInBox>
        <div class="flex lg:flex-row flex-col justify-between mt-32">
          <h1 class="md:text-[39px] text-[34px] font-black lg:w-[45%]">
            A Commitment to Excellence in
            <span class="bg-white text-black rounded-xl px-4 py-1"
              >Digital Marketing</span
            >
          </h1>
          <p
            class="block text-[17px] mt-4 lg:mt-0 lg:w-[44%] text-sm text-[#b3b3b3]"
          >
            We believe in the power of creativity and innovation. Our agency was
            founded on the principles of transparency, collaboration, and
            results-driven strategies. With a focus on delivering exceptional
            digital marketing solutions, we strive to empower our clients to
            achieve their goals and stand out in a competitive landscape.
          </p>
        </div>
        <img class="my-10" src="/HeroStats02.avif" alt="herostats" />
      </section>
      <section class="">
        <div class="grid lg:grid-cols-3 grid-cols-1 lg:gap-x-10">
          <div class="bg-[#111111] lg:h-60 h-48 rounded-xl">
            <AnimatedBox client:load>
              <h1 class="flex flex-col lg:ml-20 ml-12 mt-12 lg:mt-20 font-bold">
                <span class="text-4xl">
                  <CountUpNum end={99.9} client:only /> %</span
                >
                <span class="text-[24px] lg:text-[27px] text-[#b3b3b3]"
                  >Happy Customers</span
                >
              </h1>
            </AnimatedBox>
          </div>
          <div class="bg-[#111111] h-48 lg:h-60 rounded-xl my-7 lg:my-0">
            <AnimatedBox client:load>
              <h1 class="flex flex-col ml-12 lg:ml-20 mt-12 lg:mt-20 font-bold">
                <span class="text-4xl">
                  <CountUpNum end={25} client:only /></span
                >
                <span class="text-[24px] lg:text-[27px] text-[#b3b3b3]">
                  Awards Won</span
                >
              </h1>
            </AnimatedBox>
          </div>
          <div class="bg-[#111111] lg:h-60 h-48 rounded-xl">
